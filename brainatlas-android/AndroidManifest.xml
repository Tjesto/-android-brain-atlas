<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mm.brainatlas_android"
    android:versionCode="10"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launch_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mm.brainatlas.activities.StarterActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mm.brainatlas.activities.StartActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" android:configChanges="orientation|screenSize"/>
        <activity 
            android:name="com.mm.brainatlas.activities.MainActivity" 
            android:screenOrientation="landscape" android:configChanges="orientation|screenSize"/>
        <activity 
            android:name="com.mm.brainatlas.activities.SourcesActivity" 
            android:screenOrientation="landscape" android:configChanges="orientation|screenSize"/>
        <activity 
            android:name="com.mm.brainatlas.activities.ListViewActivity" 
            android:screenOrientation="landscape" android:configChanges="orientation|screenSize"/>
        <activity 
            android:name="com.mm.brainatlas.activities.BrainPartInfoActivity" 
            android:screenOrientation="landscape" android:configChanges="orientation|screenSize"/>
        <activity 
            android:name="com.mm.brainatlas.activities.BrainDiseaseActivity" 
            android:screenOrientation="landscape" android:configChanges="orientation|screenSize"/>
        <activity
            android:name="com.mm.brainatlas.activities.WebViewActivity" />
        <activity 
            android:name="com.mm.brainatlas.activities.FullImageActivity" 
            android:screenOrientation="landscape" android:configChanges="orientation|screenSize"/>
        <activity 
            android:name="com.mm.brainatlas.activities.DiseasePartComparerActivity" 
            android:screenOrientation="landscape" android:configChanges="orientation|screenSize"/>
        <activity 
            android:name="com.mm.brainatlas.activities.DetailsViewComparerActivity" 
            android:screenOrientation="landscape" android:configChanges="orientation|screenSize"/>
        <activity 
            android:name="com.mm.brainatlas.activities.AppGuideActivity" 
            android:screenOrientation="landscape" android:configChanges="orientation|screenSize"/>
        <activity 
            android:name="com.mm.brainatlas.activities.ContactActivity" 
            android:screenOrientation="landscape" android:configChanges="orientation|screenSize"/>
        <service android:name="com.mm.brainatlas.services.BrainService" />
    </application>

</manifest>
